# Local Configuration
http://localhost {

	rewrite /gateway /gateway/
	handle_path /gateway/* {
		rewrite * /socket.io{path}
		reverse_proxy ws-server:5000
	}

	reverse_proxy app:3000 {
		header_up Host {host}
		header_up X-Real-IP {remote}
	}
}

http://s3.localhost {
	reverse_proxy seaweedfs-s3:8333 {
		header_up Host {host}
		header_up X-Real-IP {remote}
	}
}