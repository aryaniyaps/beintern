# Local Configuration
http://localhost {

	rewrite /gateway /gateway/
	handle_path /gateway/* {
		rewrite * /socket.io{path}
		reverse_proxy ws-server:5000
	}

	reverse_proxy app:3000 {
		header_up Host {host}
		header_up X-Real-IP {remote}
	}
}

http://minio.localhost {
	reverse_proxy /ui/* minio:9001 {
		header_up Host {host}
		header_up X-Real-IP {remote}
	}

	reverse_proxy minio:9000 {
		header_up Host {host}
		header_up X-Real-IP {remote}
	}
}