# Local Configuration
http://localhost {
	reverse_proxy /connection/* centrifugo:8000 {
		header_up Host {host}
		header_up X-Real-IP {remote}
		header_up Upgrade WebSocket
		header_up Connection Upgrade
	}

	reverse_proxy /gateway/* ws-server:5000 {
		header_up Host {host}
		header_up X-Real-IP {remote}
		header_up Upgrade WebSocket
		header_up Connection Upgrade
	}

	reverse_proxy app:3000 {
		header_up Host {host}
		header_up X-Real-IP {remote}
	}
}

http://minio.localhost {
	reverse_proxy /ui/* minio:9001 {
		header_up Host {host}
		header_up X-Real-IP {remote}
	}

	reverse_proxy minio:9000 {
		header_up Host {host}
		header_up X-Real-IP {remote}
	}
}